<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity ="center_horizontal"
    >
    
    <TextView android:text="@string/number_prompt"
    	android:textSize="15sp"
    	android:id="@+id/number_prompt"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:textColor ="#FFFFFF"
    	android:gravity="center"
  	>
    </TextView>
    
    <Spinner
    	android:id="@+id/numberSpinner"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:prompt="@string/number_prompt"
    	>
    </Spinner>
    
    <TextView android:text="@string/dice_prompt"
    	android:textSize="15sp"
    	android:id="@+id/dice_prompt"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:textColor="#FFFFFF"
    	android:gravity="center"
    >
    </TextView>
    
    <Spinner
    	android:id="@+id/diceSpinner"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:prompt="@string/dice_prompt"
    	>
    </Spinner>
    
    <TextView android:text="@string/dice_result"
    	android:textSize="15sp"
    	android:id="@+id/dice_result"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:textColor="#FFFFFF"
    	android:gravity="center"
    	android:visibility="invisible"
    >
    </TextView>
    
    <TextView android:text=""
    	android:textSize="40sp"
    	android:id="@+id/line1"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textColor="#FF0000"
    	android:gravity="center"
    >
    </TextView>
    
    <TextView android:text="@string/total"
    	android:textSize="15sp"
    	android:id="@+id/total"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:textColor="#FFFFFF"
    	android:gravity="center"
    	android:visibility="invisible"
    >
    </TextView>
    
    <TextView android:text=""
    	android:textSize="80sp"
    	android:id="@+id/result" 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent"
    	android:gravity="center_horizontal"
    	android:layout_weight="2"
    	android:textColor="#FFE303"
    	>
    </TextView>
    
    <Button android:text="@string/roll_dice"
    	android:layout_width="wrap_content"
    	android:layout_height = "wrap_content"
    	android:textSize="30sp"
    	android:id="@+id/button1"
    	>
    </Button>
</LinearLayout>
